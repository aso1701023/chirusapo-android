<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckGrowthActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/ChildChenge_button"
            android:layout_width="50dp"
            android:layout_height="wrap_content"

            android:background="@drawable/activity_check_growth_button" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ListView
                android:id="@+id/ChildList"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:orientation="horizontal"></ListView>

            <Button
                android:id="@+id/ChildAdd"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:background="@drawable/activity_childadd_button"
                android:text="+" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/CheckGrowth_ScrollView"
            android:layout_width="match_parent"

            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/linearLayout_child">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/text_border">


                </com.github.mikephil.charting.charts.LineChart>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/child_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="名前"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/child_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_border">

                    <TextView
                        android:id="@+id/child_birthday_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="誕生日"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/child_birthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/child_old_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="年齢"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/child_old"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/child_gender_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="性別"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/child_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_border">

                    <TextView
                        android:id="@+id/child_blood_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="血液型"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/child_blood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_border">

                    <TextView
                        android:id="@+id/child_height_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="身長"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/child_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_border">

                    <TextView
                        android:id="@+id/child_weight_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="体重"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/child_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_border">

                    <TextView
                        android:id="@+id/child_clothesSize_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服のサイズ"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/child_clothesSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/text_border">

                    <TextView
                        android:id="@+id/child_shoesSize_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="靴のサイズ"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/child_shoesSize"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textSize="30sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="予防接種" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/VaccineName_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="予防接種した病名"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/VaccineName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textSize="30sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/VaccineDay_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="予防接種した日付"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/VaccineDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="textEnd"
                        android:textSize="30sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="アレルギー" />

                <ListView
                    android:id="@+id/AllergyDataList"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:background="@drawable/text_border" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="記録" />

                <Button
                    android:id="@+id/CheckGrowthButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/activity_checkgrowth_listbutton"
                    android:backgroundTint="@color/sd_overlay_color"
                    android:text="今までの成長"
                    android:textAlignment="viewStart"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/text_border"
                    android:text="友達" />

                <Button
                    android:id="@+id/childFriend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/activity_checkgrowth_listbutton"
                    android:backgroundTint="@color/sd_overlay_color"
                    android:text="友達一覧"
                    android:textAlignment="viewStart"
                    android:textSize="30sp" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>



